
@inject PersistentAuthenticationStateProvider AuthStateProvider
@namespace BlazorWebApp.Identity
@using BlazorWebApp.Identity
@{
    if (User.Identity.IsAuthenticated)
    {
        await AuthStateProvider.GetAuthenticationStateAsync();
    }
    Layout = "/Identity/_Layout.cshtml";
}
    




